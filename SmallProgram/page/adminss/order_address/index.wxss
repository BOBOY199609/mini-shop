/* pages/shop/shop/index.wxss */
page{
	background-color: #fff;
}
.type_list{
	width: 100%;
	height:100rpx;
	line-height: 100rpx;
	text-align: center;
	border-bottom: 1px solid #E4E4E5;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #fff;
}
.type_list view{
	width: 25%;
	float: left;
	text-align: center;
}
.type_list view text{
	padding: 10rpx 0;
}
.active{
	color: #33C92C;
	border-bottom: 3px solid #33C92C!important;
}
.list_view{
	margin-top: 110rpx;
}
view{
    color: #363636;
    font-size: 28rpx;
}
.menulist{
    line-height: 120rpx;
	overflow:hidden;

	border-bottom: 1px solid #E4E4E5;
}
.menulist .order_info_view{
	width: 90%;
	float: left;
}
.menulist .order_info_view view{
	height: 60rpx;
    line-height: 60rpx;
	text-overflow:ellipsis;
	white-space:nowrap;
	overflow:hidden;
	width: 100%;
}
.menulist image{
    width:2%;
	vertical-align:middle;
}
.menu_item_img{
	width: 10%!important;
	float:left;
}
.menu_item_img image{
	width:50%;
	margin:0 25%;
}
.area{
	color: #A3A3A4;
}
.all_goods{
	width: 100%;
	background-color: #F7F7F8;
	float: left;
}
.goods_list{
	width: 21%;
	padding: 0 2%;
	height: 200rpx;
	line-height: 200rpx;
	float:left;
}
.goods_list image{
	width: 100%;
	height: 170rpx!important;
	line-height: 170rpx!important;
	margin-top: 15rpx;
	float: left;
}
.order_goods_view{
	width: 73%;
	float: left;
	margin-left: 2%;
}
.order_goods_view view{
	height: 65rpx;
	line-height: 65rpx;
	font-size: 36rpx;
	color:#000;
	text-overflow:ellipsis;
	white-space:nowrap;
	overflow:hidden;
}
.goods_num{
	text-align: right;
	padding-right: 5%;
	color: #A3A3A4!important;
	font-size: 28rpx!important;
}
.amount_view{
	width: 92%;
	margin: 0 4%;
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 5px solid #EAEAEA;
	float: left;
}
.amount_view2{
	border-bottom:none!important;
}
.amount_view view{
	width: 30%;
	float: left;
	text-align: right;
	font-size: 24rpx;
}
.order_state{
	width: 40%!important;
	text-align: left!important;
}
.amount_item{
	color: #000;
}
.amount_btn{
	color:#fff;
	background-color: #33C92C;
	border-radius: 10rpx;
	text-align: center!important;
	float: right!important;
}
.amount_btn2{
	color:#fff;
	background-color: red;
	margin-right: 10rpx;
	border-radius: 10rpx;
	text-align: center!important;
	float: right!important;
}