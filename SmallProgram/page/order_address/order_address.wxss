/* pages/shop/shop/index.wxss */

view{
    color: #363636;
    font-size: 28rpx;
}
.menulist{
    height: 120rpx;
    line-height: 120rpx;
    border-bottom: 1px solid #f3f3f3;
}
.menulist view{
	width: 42%;
	float: left;
}
.menulist text{
    margin-left: 5%;
    display: block;
    width: 25%;
    float: left;
    
}
.menulist input{
    float: left;
    width: 68%;
    vertical-align:middle;
    height: 70rpx;
    margin-top: 15rpx;
}
.menulist image{
    width:2%;
	vertical-align:middle;
}
.menu_item_img{
	width: 10%!important;
}
.menu_item_img image{
	width:50%;
	margin:0 25%;
}
.right_view{
	width: 37%!important;
	text-align: right;
	padding-right: 5%;
}
.right_view image{
	width: 1px;
	height: 1px;
}
.right_view span{
	color: #ffbc00;
}

.middle{
	width: 100%;
	border-bottom: 5px #8b8b8b solid;
}
.title{
	display: inline-block;
	width: 33%;
	height: 40px;
	line-height: 40px;
	text-align: center;
}
.list_detail{
	color:#7d7d7d;font-size:12px;border-bottom:1px solid #ebebeb;
}


.GoodsView{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.3);
	position:fixed;
	top:0;
	font-size:34rpx;
}
.goodsList{
	width: 80%;
	height: 60%;
	margin-left: 10%;
	margin-top: 20%;
	background: #fff;
	border-radius: 10rpx;
}
.hiddenClass{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
}