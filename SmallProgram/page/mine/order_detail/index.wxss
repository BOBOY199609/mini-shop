/* pages/shop/shop/index.wxss */
page{
	background-color: #fff;
}
view{
    color: #363636;
    font-size: 28rpx;
}
.menulist{
    line-height: 120rpx;
	overflow:hidden;

	border-bottom: 1px solid #E4E4E5;
}
.menulist .order_info_view{
	width: 90%;
	float: left;
}
.menulist .order_info_view view{
	height: 60rpx;
    line-height: 60rpx;
	text-overflow:ellipsis;
	white-space:nowrap;
	overflow:hidden;
	width: 100%;
}
.menulist image{
    width:2%;
	vertical-align:middle;
}
.menu_item_img{
	width: 10%!important;
	float:left;
}
.menu_item_img image{
	width:50%;
	margin:0 25%;
}
.area{
	color: #A3A3A4;
}
.all_goods{
	width: 100%;
	background-color: #F7F7F8;
	float: left;
}

.goods_list{
	width: 100%;
	padding: 0 2%;
	height: 200rpx;
	line-height: 200rpx;
	float:left;
	border-top: 1px solid #E4E4E5;
	background-color: #F7F7F8;
}
.goods_list image{
	width: 22%;
	height: 170rpx!important;
	line-height: 170rpx!important;
	margin-top: 15rpx;
	float: left;
}
.order_goods_view{
	width: 73%;
	float: left;
	margin-left: 2%;
}
.order_goods_view view{
	height: 65rpx;
	line-height: 65rpx;
	font-size: 36rpx;
	color:#000;
	text-overflow:ellipsis;
	white-space:nowrap;
	overflow:hidden;
	width: 100%;
}
.goods_num{
	text-align: right;
	padding-right: 5%;
	color: #A3A3A4!important;
	font-size: 28rpx!important;
}
.amount_view{
	width: 92%;
	margin: 0 4%;
	height: 80rpx;
	line-height: 80rpx;
	float: left;
	margin-bottom: 5%;
}
.amount_view view{
	width: 30%;
	float: left;
	text-align: right;
	font-size: 24rpx;
}
.order_state{
	width: 40%!important;
	text-align: left!important;
}
.amount_item{
	color: #000;
}